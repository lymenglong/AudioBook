<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/layout_item_list"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="40dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginEnd="40dp" />
    <TextView
        android:id="@+id/sub_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_item"
        android:layout_alignStart="@+id/title_item"
        android:layout_below="@+id/title_item"
        android:textStyle="italic"
        android:textColor="#cfcfcf"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/item_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imgNext"
        android:layout_toStartOf="@id/imgNext"
        android:layout_alignBaseline="@+id/imgNext"
        android:text="@string/_00_00_00"
        android:textStyle="italic"
        android:layout_below="@+id/title_item"
        android:textColor="#ff8c00"
        android:visibility="gone"
        android:textSize="12sp"
        />
    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        tools:ignore="ContentDescription" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true" />


</RelativeLayout>